@model HashTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Home" asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-2">
            <select asp-for="HashType" asp-items="Model.HashTypes">
                <option value="">All hash types</option>
            </select>
        </div>
        <div class="col-md-4">
            Filename: <input type="text" name="SearchString">
        </div>
        <div class="col-md-1">
            <input type="submit" value="Filter" />
        </div>
        <div class="col-md-5">&nbsp;</div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HashList[0].Filename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HashList[0].Hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HashList[0].HashType)
            </th>
            <!-- th>
                2Html.DisplayNameFor(model => model.HashList[0].FileInfo)
            </th -->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HashList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Filename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HashType)
            </td>
            <!-- td>
                2Html.DisplayFor(modelItem => item.FileId)
            </td -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.FileId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FileId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
